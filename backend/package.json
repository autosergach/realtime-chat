    "fastify": "^4.28.1",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.4.1",
    "@types/jsonwebtoken": "^9.0.7",
    "prisma": "^5.18.0",
    "tsx": "^4.16.0",
    "typescript": "5.5.4",
    "vitest": "^2.0.5"
  }
